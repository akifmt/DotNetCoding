
<RadzenPanelMenu>

    <RadzenPanelMenuItem Text="Home" Match="NavLinkMatch.All" Path="@(NavigationManager?.BaseUri)" Click="PanelMenuItemClick" />
    <RadzenPanelMenuItem Text="Posts" Match="NavLinkMatch.All" Path="@($"{NavigationManager?.BaseUri}BlogPost")" Click="PanelMenuItemClick" />

</RadzenPanelMenu>

@code {

    [Parameter]
    [EditorRequired]
    public Action? AfterClick { get; set; }

    [Inject]
    NavigationManager? NavigationManager { get; set; }

    async void PanelMenuItemClick()
    {
        if (AfterClick is not null)
            await InvokeAsync(AfterClick);
    }

}